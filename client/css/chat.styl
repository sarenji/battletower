monospace-font(size=14px)
  font size "PT Mono", "Monaco", monospace

.chat
  position absolute
  top 0
  right 0
  bottom 0
  background white
  border-radius 0 4px 4px 0

.user_list
  position absolute
  top    0
  right  0
  bottom 0
  width  25%
  background $body-color
  overflow-y auto
  border-radius 0 4px 4px 0
  p
    padding 2px 6px
    margin 0
  ul
    margin 0
    padding 0
    list-style none
    li
      monospace-font()
      padding 2px 6px

.message_pane
  position absolute
  top    0
  left   0
  right  25%
  bottom 0

.messages
  monospace-font()
  overflow-y auto
  position absolute
  top 0
  left 0
  right 0
  bottom 30px
  p
    margin 2px 0 2px 10px

.chat_input_pane
  monospace-font()
  position absolute
  width 100%
  bottom 0
  height 30px

  .chat_input_wrapper
    overflow: hidden  // Make it take the remainder of the space not used by the button

  .chat_input
    box-sizing border-box
    border 2px solid #384035
    padding 2px 6px
    margin 0
    width 100%
    height 30px
    border-radius 2px
    &:hover
      border-color #5D736B
    &:focus
      border-color #F27405
      outline none

  .chat_input_send
    box-sizing border-box
    float right
    margin 0
    height 30px